<%= form_with url: "/buildings", method: :post, local: true do |form| %>
  <%= form.label "Name:" %><br>
  <%= form.text_field :name %><br>
  <%= form.label "Address:" %><br>
  <%= form.text_field :address %><br>
  <%= form.label "Owner name:" %><br>
  <%= form.text_field :owner %><br>
  <%= form.label "Equipment type:" %><br>
  <%= form.text_field :unit_type %><br>
  <%= form.label "Number of units:" %><br>
  <%= form.text_field :num_units %><br>
  <%= form.label "Year installed:" %><br>
  <%= form.text_field :year_installed %><br>
  <%= form.label "Needs modernization?:" %><br>
  <%= form.text_field :needs_modernization? %><br>
  <%= form.label "Date of last service:" %><br>
  <%= form.text_field :last_serviced %><br>
  <br>
  <%= form.submit "Create Building" %>
<% end %>
