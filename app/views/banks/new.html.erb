<%= form_with url: '/banks', method: :post, local: true do |form| %>

<%= form.label :name %>
<%= form.text_field :name %>
<br>
<%= form.label :hq_city_state %>
<%= form.text_field :hq_city_state %>
<br>
FDIC Insured?
<%= form.label :fdic_ins, "True" %>
<%= form.radio_button :fdic_ins, true %>
<%= form.label :fdic_ins, "False" %>
<%= form.radio_button :fdic_ins, false %>
<br>
Has a mobile app?
<%= form.label :mobile_app, "True" %>
<%= form.radio_button :mobile_app, true %>
<%= form.label :mobile_app, "False" %>
<%= form.radio_button :mobile_app, false %>
<br>
<%= form.label :size_by_assets %>
<%= form.text_field :size_by_assets %>
<br>
<%= form.submit "Create Bank" %>
<% end %>
